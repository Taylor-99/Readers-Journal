
<%- include('../partials/nav.ejs') %>

<p>Add New Reading</p>

<form action="/library/" method="post">
    <label for="title">Title:</label>

    <input type="text" name="title" placeholder="Enter the Title"/>

    <label for="author">Author:</label>
    <input type="text" name="author" placeholder="Enter The Author"/>

    <label for="description">Description:</label>
    <input type="text" name="description" placeholder="Give a description of your reading"/>

    <label for="tags">Tags:</label>
    <input type="text" name="tags" placeholder="Comma seperated"/>

    <label for="image">Reading Cover:</label>
    <input type="text" name="image" placeholder="Enter the cover of the Reading"/>

    <label for="chapter_section">Number of Chapters or Sections:</label>
    <input type="number" name="chapter_section" placeholder="How many chapters or sections are in this reading"/>

    <label for="review">Give a Review: </label>
    <input type="text" name="review" placeholder="Give a review between 0 and 5"/>

    <label for="comment">Write a comment about the review: </label>
    <input type="text" name="comment" placeholder="Write a comment"/>

    <label for="favorite">Add to favorites: </label>
    <input type="checkbox" name="favorite"/>
    
    <input type="submit" value="Add Reading"/>
</form>